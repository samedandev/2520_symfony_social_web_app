{% if profile and profile.image %}
	{# 'profiles' folder comes from /config/packages/twig.yaml #}
	{# '~ profile.image' means concatenate = '~ in twig files' #}<div class> </div>
	<img src="{{ profiles ~ profile.image }}" class="inline-block h-{{size}} w-{{size}} rounded-full ring-2 ring-white dark:ring-dark-gray dark:ring-gray-600"/>

{% else %}
	<div class="inline-block bg-gray-200 dark:bg-gray-700 rounded-full text-3xl h-{{size}} w-{{size}} ring-2 ring-white dark:ring-gray-600"></div>

{% endif %}
