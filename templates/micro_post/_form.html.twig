

{% block body %}
    {{ form_start(form) }}
        <div>{{ form_errors(form) }}</div>

        <div>
            {{ form_label(form.title, 'Please enter the title') }}
        </div>
        <div>
            {{ form_widget(form.title, {'attr': {'style': 'color: blue'}}) }}
        </div>

        <div>
            {{ form_label(form.text, 'Please enter the post text') }}
        </div>
        <div>
            {{ form_widget(form.text) }}
        </div>

        <div>
           <button type="submit">Ajouter</button>
        </div>

    {{ form_end(form) }}

{% endblock %}
