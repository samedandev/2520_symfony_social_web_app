{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
<div>
  {% if posts|length > 0 %}
  {% for post in posts %}
    <div><a href="{{ path('app_micro_post_show', {post: post.id}) }}">
        <i>{{ post.title }}</i>
        </a>
    </div>
   
    

  {% endfor %}
  
  {% else %}
    <p>No elements yet</p>
  {% endif %}
  
</div>
{% endblock %}
