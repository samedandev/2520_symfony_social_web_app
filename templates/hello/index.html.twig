{% extends 'base.html.twig' %}

{% block body %}

<div>
  {% if messages|length > 0 %}
  {% for key,message in messages|slice(0, limit) %}
    <div><a href="{{ path('app_show_one', {id: key}) }}"><i>{{ message.message }}</i></a></div>
    <div style="color: grey">
      {{ include('hello/_message.html.twig', {message: message}) }}  
    </div>
    

  {% endfor %}
  
  {% else %}
    <p>No elements yet</p>
  {% endif %}
  
</div>

{% endblock %}
